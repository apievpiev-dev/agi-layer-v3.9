# AGI Layer v3.9 - Пример конфигурации

# Общие настройки
PROJECT_NAME=AGI Layer v3.9
VERSION=3.9.0
DEBUG=false

# База данных PostgreSQL
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=agi_layer
POSTGRES_USER=agi_user
POSTGRES_PASSWORD=agi_password

# ChromaDB
CHROMA_HOST=chromadb
CHROMA_PORT=8000
CHROMA_COLLECTION=agi_memory

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Telegram Bot
TELEGRAM_TOKEN=YOUR_TELEGRAM_BOT_TOKEN_HERE
TELEGRAM_CHAT_ID=YOUR_TELEGRAM_CHAT_ID_HERE

# Telegram Chat Settings
TELEGRAM_ALLOWED_CHATS=[YOUR_CHAT_ID_HERE]
TELEGRAM_CHAT_ENABLED=true
MAX_CONTEXT_MESSAGES=10
CHAT_RESPONSE_TIMEOUT=30
ENABLE_IMAGE_PROCESSING=true
ENABLE_VOICE_MESSAGES=false
DEFAULT_PERSONALITY=helpful_assistant

# Web UI
WEB_UI_HOST=0.0.0.0
WEB_UI_PORT=8501

# Модели
MODELS_PATH=/app/models
DOWNLOAD_MODELS_ON_START=true

# Логирование
LOG_LEVEL=INFO
LOG_PATH=/app/logs

# Безопасность
SECRET_KEY=your-secret-key-here-change-this
ALLOWED_HOSTS=*

# Агенты
AGENT_LOOP_INTERVAL=1.0
AGENT_TIMEOUT=300
MAX_CONCURRENT_TASKS=10

# Настройки восстановления
RECOVERY_INTERVAL=300
MAX_RECOVERY_AGE=3600

# Настройки мониторинга
HEALTH_CHECK_INTERVAL=30
RESTART_FAILED_AGENTS=true

